// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  role String? @default("user")

  apikeys Apikey[]
  backtests Backtest[]
  portfolios Portfolio[]

  @@unique([email])
  @@map("user")
}

model Portfolio {
  id        String   @id @default(cuid())
  name      String
  symbols   String[]
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  backtests Backtest[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("portfolio")
}

model Backtest {
  id                String   @id @default(cuid())
  symbols           String[]
  portfolioId       String?
  portfolio         Portfolio? @relation(fields: [portfolioId], references: [id])
  start             Int      
  end               Int
  timeframe         String
  initialCash       Float
  feeRate           Float
  marginRequirement Float
  strategyName      String
  strategyParams    Json?
  status            String   @default("PENDING")
  result            BacktestResult?
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime @default(now())

  @@index([userId])
  @@map("backtest")
}

model BacktestResult {
  id            String   @id @default(cuid())
  backtestId    String   @unique
  backtest      Backtest @relation(fields: [backtestId], references: [id], onDelete: Cascade)
  totalReturn   Float
  finalEquity   Float
  totalFees     Float
  totalTrades   Int
  trades        Json     // List of trades: Array<{symbol, side, price, quantity, fee, timestamp}>
  equityCurve   Json     // List of {timestamp, equity}
  indicators    Json?    // Map of { symbol: { indicatorName: [{time, value}, ...] } }
  logs          Json?
  createdAt     DateTime @default(now())

  @@map("backtest_result")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Symbol {
  symbol        String @id
  name          String?
  baseAsset     String
  quoteAsset    String
  sector        String?
  industry      String?
  exchange      String?
  priceStep     Float  @default(0.01)
  quantityStep  Float  @default(1.0)
  minQuantity   Float  @default(1.0)

  @@map("symbol")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Apikey {
  id                  String    @id
  name                String?
  start               String?
  prefix              String?
  key                 String
  userId              String
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  refillInterval      Int?
  refillAmount        Int?
  lastRefillAt        DateTime?
  enabled             Boolean?  @default(true)
  rateLimitEnabled    Boolean?  @default(true)
  rateLimitTimeWindow Int?      @default(86400000)
  rateLimitMax        Int?      @default(10)
  requestCount        Int?      @default(0)
  remaining           Int?
  lastRequest         DateTime?
  expiresAt           DateTime?
  createdAt           DateTime
  updatedAt           DateTime
  permissions         String?
  metadata            String?

  @@index([key])
  @@index([userId])
  @@map("apikey")
}

model Candle {
  symbol    String
  timeframe String
  timestamp Int      // Unix timestamp (seconds)
  date      DateTime // ISO Date
  open      Float
  high      Float
  low       Float
  close     Float
  volume    Float

  @@id([symbol, timeframe, timestamp])
  @@map("candle")
}
